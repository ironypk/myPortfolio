.slider {
  display: flex;
  justify-content: space-between;
  width: 100%;
  @include tablets {
    display: block;
  }
}


.slider__img {
  min-width: 975px;
  height: 550px;
  margin-right: 100px;
  @include desktop{
    min-width:630px;
    height:350px;
  }
  @include tablets {
    width: 100%;
    min-width:100%;
    height: auto;
    margin-right: 0;
    margin-bottom: 20px;
  }
}

.slider__img_content {
  position: relative;
  width: 100%;
  height: 100%;
}

////MAIN SLIDER

.slider__pic_container{
  width: 100%;
  height: 100%;
}

.slider__pic {
  width: 100%;
  height: 100%;
}

///////SLIDER CONTROLS

.slider__controls {
  position: absolute;
  right:-50px;
  bottom: 30px;
  @include phones{
    right: 0;
    bottom: 0;
  }
}

.slider__wrapper{
  display: flex;
  align-items: center;
  overflow: hidden;
  width:calc(180 * 3 + 50)px;
  height: 106px;
   @include phones{
    width:auto;
    height:auto;
    overflow: initial;
  }
}

.slider__controls_list {
  width:calc(180 * 3)px;
  position: relative;
  display: flex;
  left:0;
  @include phones{
    width:0;
    height:0;
    overflow: hidden;
  }
}

.slider__controls_item {
  position: relative;
  min-width: 180px;
  max-height: 100px;
  cursor: pointer;
  z-index: 20;
   &_first_visible{
    border-left: 3px solid transparent;
  }
  &::before{
    content: '';
    position: absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    background-color: $blue;
    display: none;
  }
  &:hover::before{
    display: block;
  }
}

.slider__controls_pic {
  width: 100%;
  height: 100%;
  &:hover{
    opacity: .7;
  }
}

.slider__controls_item_active {
  background-color: $blue;
  outline: solid 3px $blue;
  z-index: 40;
}

.slider__buttons {
  z-index:50;
  background-color: #2d3c4e;
  @include phones {
    right: 0;
    bottom: 0;
  }
}

.slider__button {
  display: block;
  width: 50px;
  height: 50px;
  background: svg-load(
      "arrow-down.svg",
      fill=$text-white-opacity,
      width=12px,
      height=20px
    )
    center center no-repeat;
}

.slider__button_active{
    &:hover {
    background: svg-load(
        "arrow-down.svg",
        fill=$text-white,
        width=12px,
        height=20px
      )
      center center no-repeat;
    background-color: $blue;
  }
}

.slider__prev{
  transform: rotate(180deg);
}

//slider description

.slider__description {
  flex: 1;
  @include tablets {
    width: auto;
    text-align: center;
  }
  @include phones {
    text-align: left;
    padding: 0 30px;
  }
}

.slider__description_list {
  display: flex;
  color: $text-black-opacity;
  font-size: 15px;
  font-weight: 600;
  margin-bottom: 50px;
  @include tablets {
    justify-content: center;
  }
  @include phones {
    justify-content: flex-start;
    text-align: left;
  }
}

.slider__description_item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 83px;
  height: 45px;
  border-radius: 22.5px;
  background-color: rgba(#7aa0c5, 0.1);
}

.slider__description_item:not(:last-child) {
  margin-right: 15px;
}

.slider__description_title {
  font-size: 30px;
  font-weight: 700;
  margin-bottom: 40px;
  padding-right: 20px;
  @include phones {
    font-size: 24px;
    line-height: 1.25;
  }
}

.slider__description_text {
  color: $text-black-opacity;
  font-weight: 600;
  line-height: 1.88;
  margin-bottom: 45px;
  @include phones {
    line-height: 1.6;
  }
}

.slider__description_link {
  position: relative;
  font-size: 18px;
  font-weight: 700;
  color: #4b6fd7;
  margin-left: 30px;
  &:hover{
     border-bottom:1px solid #4b6fd7;
  }
 

  &:before {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    left: -15px;
    content: "";
    width: 30px;
    height: 15px;
    background: svg-load("link.svg", fill=#4b6fd7, width=100%, height=100%) left
      center no-repeat;
  }
}
