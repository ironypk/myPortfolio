.popup__container{
    position: relative;
    width:100%;
    height:100%;
    display:flex;
    flex-direction: column;
    justify-content: center;
}

.menu__list--popup{
    flex-direction: column;
    margin-bottom:60px;
}

.menu__item--popup:not(:last-child){
    margin-bottom:20px;
}

.socials__pic--popup{
    fill:$text-black-opacity !important;
}

.popup__btn_close{
    display: flex;
    justify-content: center;
    align-items:center;
    position: absolute;
    width:30px;
    height:30px;
    background-color: red;
    top:0;
    right:0;
    &:hover::after, &:hover::before{
        background-color: $blue;
    }
    &::after{
        position: absolute;
        content: '';
        width:5px;
        height:20px;
        background-color: $text-black;
        transform: rotate(-45deg);
    }
    &::before{
        position: absolute;
        content: '';
        width:5px;
        height:20px;
        background-color: $text-black; 
        transform: rotate(45deg); 
    }
}