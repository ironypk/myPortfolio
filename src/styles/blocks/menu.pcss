.menu{
   max-width:700px;
   width:100%;
}

.menu__list{
    width:100%;
    display: flex;
    justify-content: space-between;
}

.menu__item{
    border-bottom:2px solid transparent;
    &:hover{
        color:$blue;
    }
}

.menu__link{
    padding:15px;
    &:hover{
        border-bottom: 2px solid $blue;
    }
}



.menu--header{
      @include tablets{
       display:none;
   } 
}